@model APPMVC.NET.Models.Contacts.ContactModel
@using APPMVC.NET.Menu
@inject AdminSidebarService _AdminSidebarService;

@{
    ViewData["Title"] = "Xóa liên hệ";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Bạn có chắc chắn xóa liên hệ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateSend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateSend)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Danh sách liên hệ</a>
    </form>
</div>

@{
    _AdminSidebarService.SetActive("Contact", "Index", "Contact");
}

@section Sidebar 
{
    @Html.Raw(_AdminSidebarService.RenderHtml())
}